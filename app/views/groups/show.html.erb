<h1><%= @group.name %></h1>
<div>
    <p> <%= @group.description %></p>
</div>
<h2>Members</h2>
<table>
<thead>
    <tr>
        <th>lp</th>
        <th>User Name</th>
        <th>Email Address</th>
    </tr>
</thead>
<tbody>
    <% @group.members.each_with_index do |member, index| %>
<tr>
    <td><%= index %></td>
    <td><%= member.user_name %></td>
    <td><%= member.email %></td>
</tr>
    <%end%>
</tbody>
</table>

<% if owner?(current_user, @group) %>
<div>
    <%= link_to 'add task', new_group_task_path(@group) %>
</div>
<%= render "add_member_form", group: @group %>
<div>
    <h3>Tasks</h3>
    <%= render "tasks/index", tasks: @group.tasks %>
</div>
<%end%>