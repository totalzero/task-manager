<h1>Registration </h1>
<%= form_with model: @user, url: users_registrations_path,  local: true do |form| %> 
<div>
    <%= form.label :user_name %>
    <%= form.text_field :user_name %>
</div>
<div>
    <%= form.label :email %>
    <%= form.email_field :email %>
</div>
<div>
    <%= form.label :password %>
    <%= form.password_field :password %>
</div>
<div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
</div>
<div>
    <%= form.submit %>
</div>
<%end%>

<% if flash[:notice] %>
<div>
    <p><%= flash[:notice] %> </p>
</div>
<%end%>
<% if flash[:alert] %>
<div>
    <h1> Registration result</h1>
    <p> <%= flash[:alert]%></p>
</div>
<%end%>